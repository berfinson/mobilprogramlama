<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"

    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        style="@style/card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İlaç Ekle"
            android:textSize="30sp"
            android:padding="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitti"
            android:textSize="30sp"
            style="@style/edt"
            android:id="@+id/TextBitti2"
            android:onClick="onclickGoToAnaMenu"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/edt"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İlaç Adı"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"

            />

       <EditText
           android:layout_width="300dp"
           android:layout_height="35dp"
           android:background="#C8C4CD"
           android:gravity="center"
           android:layout_gravity="center"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hatırlatıcı"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"


            />
        <Button
            android:id="@+id/button_saat_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edittext_saat"
            android:layout_toEndOf="@+id/edittext_saat"
            android:layout_toRightOf="@+id/edittext_saat"
            android:text="Saat Seç"
            />
        <EditText
            android:id="@+id/edittext_saat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</LinearLayout>