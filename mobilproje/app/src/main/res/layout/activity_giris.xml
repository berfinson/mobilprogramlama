<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="1"
    android:background="#93DF94"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".girisActivity">

   <LinearLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_gravity="center"
       android:orientation="vertical"
       >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="İLAÇLARINIZI KONTROL ALTINDA TUTUN"
           android:textSize="40dp"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginTop="230dp"

           />
       <Button
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="Giriş Yap"
           android:layout_marginTop="60dp"
           android:id="@+id/btnGirisYap"
           android:onClick="onclickGoToMain"

           />
       <Button
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="Üye Ol"
           android:layout_marginTop="30dp"
           android:id="@+id/BtnOturumAc"
           android:onClick="onclickGoToUyeOl"
           />
   </LinearLayout>
</LinearLayout>